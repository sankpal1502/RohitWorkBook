pipeline{
     agent any
     stages {
     
        stage('Preparation') {
        
           when { triggeredby 'TimerTrigger'
           steps {
                sh 'echo "Hello I am in preparation stage"'
                 }
                 }
               }
 
            
        stage('Build') {
           steps {
                sh 'echo "Hello I am in Build Stage"'
                sh '''
                    echo "Multiline shell steps works too"
                    ls -lah
                    '''
                 }
               }
            }
    }
            
